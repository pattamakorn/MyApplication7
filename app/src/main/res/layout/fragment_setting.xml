<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".setting">

    <androidx.cardview.widget.CardView
        android:layout_margin="5dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/topmachine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:text="เครื่องวัดของคุณ"
                android:textSize="19sp"
                android:fontFamily="@font/mitr_semibold"/>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_marginTop="5dp"
                android:id="@+id/recyclermachine"
                android:layout_below="@+id/topmachine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <Button
                android:layout_marginTop="5dp"
                android:background="@drawable/red_style"
                android:layout_below="@+id/recyclermachine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</FrameLayout>
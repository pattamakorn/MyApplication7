<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".history">

    <LinearLayout
        android:orientation="vertical"
        android:background="#69864A"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgprofilehis"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:src="@drawable/ic_launcher_background" />

        <TextView
            android:id="@+id/fullnamehistory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/mitr_semibold"
            android:gravity="center"
            android:text="Name"
            android:textColor="#fff"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                app:cardBackgroundColor="#586949"
                app:cardElevation="10dp"
                android:layout_margin="2dp"
                android:layout_width="120dp"
                android:layout_height="90dp">
                <LinearLayout
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/rearr"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/mitr_semibold"
                        android:gravity="center"
                        android:text="200"
                        android:textColor="#fff"
                        android:textSize="30sp" />
                    <TextView
                        android:fontFamily="@font/mitr_semibold"
                        android:textSize="16sp"
                        android:textColor="#fff"
                        android:gravity="center"
                        android:text="ไร่"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                app:cardBackgroundColor="#586949"
                app:cardElevation="10dp"
                android:layout_margin="2dp"
                android:layout_width="120dp"
                android:layout_height="90dp">
                <LinearLayout
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/count"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/mitr_semibold"
                        android:gravity="center"
                        android:text="200"
                        android:textColor="#fff"
                        android:textSize="30sp" />
                    <TextView
                        android:fontFamily="@font/mitr_semibold"
                        android:textSize="16sp"
                        android:textColor="#fff"
                        android:gravity="center"
                        android:text="ครั้ง"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_gravity="center"
                app:cardBackgroundColor="#586949"
                app:cardElevation="10dp"
                android:layout_margin="2dp"
                android:layout_width="120dp"
                android:layout_height="90dp">
                <LinearLayout
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/sum"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/mitr_semibold"
                        android:gravity="center"
                        android:text="200"
                        android:textColor="#fff"
                        android:textSize="30sp" />
                    <TextView
                        android:fontFamily="@font/mitr_semibold"
                        android:textSize="16sp"
                        android:textColor="#fff"
                        android:gravity="center"
                        android:text="บาท"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <TextView
            android:fontFamily="@font/mitr_semibold"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="ประวัติการปลูก"
            android:textColor="#fff"
            android:textSize="16sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/historyplant"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>

</FrameLayout>
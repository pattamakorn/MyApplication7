<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/toppage"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:fontFamily="@font/mitr_semibold"
            android:text="ปลูกไรดี"
            android:textColor="#fff"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <RelativeLayout
            android:id="@+id/latop"
            android:layout_below="@+id/toppage"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginLeft="29dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:id="@+id/selectmachine"
                android:gravity="right"
                android:fontFamily="@font/mitr_semibold"
                android:textSize="20sp"
                android:textColor="#fff"
                android:text="เครื่องที่1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/selecttrend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="29dp"
                android:layout_marginRight="29dp"
                android:fontFamily="@font/mitr_semibold"
                android:gravity="left"
                android:text="ปลูกตาม"
                android:textColor="#fff"
                android:textSize="20sp" />
        </RelativeLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_below="@+id/latop"
            android:id="@+id/puklaideerecycelr"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </RelativeLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bgpuk"
    android:layout_height="match_parent"
    tools:context=".addmachine">
    <RelativeLayout
        android:background="@drawable/bgpuk"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_marginTop="80dp"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:fontFamily="@font/mitr_semibold"
            android:gravity="center"
            android:id="@+id/texttopmymachine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="อุปกรณ์ของคุณ"/>

        <RelativeLayout
            android:layout_below="@+id/texttopmymachine"
            android:id="@+id/layoutbutton"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:id="@+id/inputid"
                android:layout_width="130dp"
                android:layout_height="130dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="10dp">
                <ImageView
                    android:layout_gravity="center"
                    android:id="@+id/imgaddid"
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:src="@drawable/addid"/>
                <TextView
                    android:fontFamily="@font/mitr_semibold"
                    android:layout_marginTop="100dp"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="หมายเลขเครื่อง"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:id="@+id/inqrcode"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_toEndOf="@+id/inputid"
                android:layout_toRightOf="@+id/inputid"
                app:cardCornerRadius="15dp"
                app:cardElevation="10dp">

                <ImageView
                    android:layout_gravity="center"
                    android:id="@+id/imgqrscan"
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:src="@drawable/scanqr"/>

                <TextView
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/mitr_semibold"
                    android:layout_marginTop="100dp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="แสกน QR code" />
            </androidx.cardview.widget.CardView>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/labt"
            android:layout_below="@+id/layoutbutton"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="15dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/pukaddress"/>

            <TextView
                android:layout_margin="15dp"
                android:textSize="16sp"
                android:textColor="#000"
                android:fontFamily="@font/mitr_semibold"
                android:layout_below="@+id/layoutbutton"
                android:id="@+id/addressmachine"
                android:text="ที่ตั้งอุปกรณ์วัดค่าของคุณ"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclermachine"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/labt"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp" />

    </RelativeLayout>
</FrameLayout>
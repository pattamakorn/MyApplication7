<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/bgpuk"
    android:layout_height="match_parent"
    tools:context=".aboutMachine">

    <androidx.cardview.widget.CardView
        app:cardElevation="15dp"
        app:cardCornerRadius="10dp"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:background="#69864A"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_marginTop="15dp"
                        android:gravity="center"
                        android:id="@+id/showIDM"
                        android:fontFamily="@font/mitr_semibold"
                        android:textSize="20sp"
                        android:textColor="#fff"
                        android:text="ID Machine"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <LinearLayout
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/pukaddress"/>

                        <TextView
                            android:id="@+id/showLocal"
                            android:layout_marginLeft="10dp"
                            android:fontFamily="@font/mitr_semibold"
                            android:textSize="20sp"
                            android:textColor="#fff"
                            android:text="ID Machine"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>
                </LinearLayout>
                <androidx.cardview.widget.CardView
                    app:cardElevation="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <LinearLayout
                        android:elevation="20dp"
                        android:layout_margin="10dp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <androidx.cardview.widget.CardView
                            android:layout_gravity="center"
                            android:layout_margin="2dp"
                            android:layout_width="110dp"
                            android:layout_height="105dp">
                            <LinearLayout
                                android:gravity="center"
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <ImageView
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:src="@drawable/moist"/>
                                <TextView
                                    android:id="@+id/valuemoist"
                                    android:fontFamily="@font/mitr_semibold"
                                    android:textColor="#000"
                                    android:textSize="18sp"
                                    android:text="Moist"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_gravity="center"
                            android:layout_margin="2dp"
                            android:layout_width="110dp"
                            android:layout_height="105dp">
                            <LinearLayout
                                android:gravity="center"
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <ImageView
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:src="@drawable/ph"/>
                                <TextView
                                    android:id="@+id/valueph"
                                    android:fontFamily="@font/mitr_semibold"
                                    android:textColor="#000"
                                    android:textSize="18sp"
                                    android:text="PH"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                                <TextView
                                    android:id="@+id/betweenph"
                                    android:fontFamily="@font/mitr_semibold"
                                    android:textColor="#000"
                                    android:textSize="14sp"
                                    android:text="(9.9 - 9.9)"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_gravity="center"
                            android:layout_margin="2dp"
                            android:layout_width="110dp"
                            android:layout_height="105dp">
                            <LinearLayout
                                android:gravity="center"
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <ImageView
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:src="@drawable/sunlight"/>
                                <TextView
                                    android:id="@+id/valuelight"
                                    android:fontFamily="@font/mitr_semibold"
                                    android:textColor="#000"
                                    android:textSize="18sp"
                                    android:text="Light"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    app:cardElevation="15dp"
                    app:cardCornerRadius="10dp"
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:layout_margin="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/care"
                            android:text="การดูแล"
                            android:fontFamily="@font/mitr_semibold"
                            android:textColor="#000"
                            android:textSize="16sp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_below="@+id/care"
                            android:id="@+id/improvement"
                            android:text="การปรับปรุง"
                            android:fontFamily="@font/mitr_semibold"
                            android:textColor="#000"
                            android:textSize="16sp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    app:cardElevation="15dp"
                    app:cardCornerRadius="10dp"
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <RelativeLayout
                        android:layout_margin="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/stat"
                            android:text="สถิติรอบ 7 วัน"
                            android:fontFamily="@font/mitr_semibold"
                            android:textColor="#000"
                            android:textSize="16sp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                        <LinearLayout
                            android:background="#B2FF59"
                            android:id="@+id/table"
                            android:layout_below="@id/stat"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <TextView
                                android:layout_marginLeft="5dp"
                                android:gravity="left"
                                android:textSize="12sp"
                                android:fontFamily="@font/mitr_semibold"
                                android:textColor="#000"
                                android:text="Date"
                                android:layout_width="108dp"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:layout_marginLeft="3dp"
                                android:gravity="left"
                                android:textSize="12sp"
                                android:fontFamily="@font/mitr_semibold"
                                android:textColor="#000"
                                android:text="Moist"
                                android:layout_width="75dp"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:layout_marginLeft="7dp"
                                android:gravity="left"
                                android:textSize="12sp"
                                android:fontFamily="@font/mitr_semibold"
                                android:textColor="#000"
                                android:text="PH"
                                android:layout_width="75dp"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:layout_marginLeft="9dp"
                                android:gravity="left"
                                android:textSize="12sp"
                                android:fontFamily="@font/mitr_semibold"
                                android:textColor="#000"
                                android:text="Light"
                                android:layout_width="75dp"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                        <FrameLayout
                            android:layout_below="@+id/table"
                            android:id="@+id/frameabout"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>


            </LinearLayout>

        </ScrollView>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
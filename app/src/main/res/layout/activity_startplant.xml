<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgpuk"
    tools:context=".startplant">

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        android:layout_margin="15dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:background="#69864A"
                android:gravity="center"
                android:fontFamily="@font/mitr_semibold"
                android:textSize="30sp"
                android:textColor="#fff"
                android:text="พืชที่คุณกำลังปลูก"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/plantingimg"
                android:scaleType="fitXY"
                android:src="@drawable/ic_launcher_background"
                android:layout_width="match_parent"
                android:layout_height="220dp"/>
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:id="@+id/plantingname"
                android:fontFamily="@font/mitr_semibold"
                android:text="ชื่อผัก"
                android:textSize="25sp"
                android:textColor="#000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_marginTop="0dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="110dp">
                <androidx.cardview.widget.CardView
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:src="@drawable/moist"
                            android:layout_width="80dp"
                            android:layout_height="80dp"/>
                        <TextView
                            android:id="@+id/plantingmoist"
                            android:gravity="center"
                            android:fontFamily="@font/mitr_semibold"
                            android:textSize="17sp"
                            android:textColor="#000"
                            android:text="Moist"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:src="@drawable/ph"
                            android:layout_width="80dp"
                            android:layout_height="80dp"/>
                        <TextView
                            android:id="@+id/plantingph"
                            android:gravity="center"
                            android:fontFamily="@font/mitr_semibold"
                            android:textSize="17sp"
                            android:textColor="#000"
                            android:text="Ph"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_margin="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:src="@drawable/sunlight"
                            android:layout_width="80dp"
                            android:layout_height="80dp"/>
                        <TextView
                            android:id="@+id/plantinglight"
                            android:gravity="center"
                            android:fontFamily="@font/mitr_semibold"
                            android:textSize="17sp"
                            android:textColor="#000"
                            android:text="Light"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/mitr_semibold"
                android:gravity="center"
                android:text="เปอร์เซ็นการเจริญเติบโต"
                android:textColor="#000"
                android:textSize="15sp" />

            <com.akaita.android.circularseekbar.CircularSeekBar
                android:layout_marginTop="10dp"
                android:id="@+id/circulbar"
                android:layout_gravity="center"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:enabled="true"
                app:innerCircleColor="#FFFFFF"
                app:min="0"
                app:max="100"
                app:progress="15"
                app:progressTextColor="#000000"
                app:progressTextSize="20"
                app:ringColor="#fff"
                app:ringWidth="0.3"
                app:showIndicator="true"
                app:showInnerCircle="true"
                app:showProgressText="true"
                app:speedMultiplier="2"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>
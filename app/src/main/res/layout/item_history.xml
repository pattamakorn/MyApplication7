<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    app:cardElevation="5dp"
    android:layout_margin="3dp"
    app:cardCornerRadius="10dp"
    android:layout_height="150dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/hisimg"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_launcher_background" />
        <LinearLayout
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/hisname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/mitr_semibold"
                android:paddingLeft="15dp"
                android:text="ชื่อผัก"
                android:textColor="#000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/hisweight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/mitr_semibold"
                android:paddingLeft="15dp"
                android:text="น้ำหนัก"
                android:textColor="#000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/hisdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/mitr_semibold"
                android:paddingLeft="15dp"
                android:text="วันที่ปลูก"
                android:textColor="#000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/hisstatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/mitr_semibold"
                android:paddingLeft="15dp"
                android:text="สถานะ"
                android:textColor="#000"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>